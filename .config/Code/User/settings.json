{
  // Place your settings in this file to overwrite the default settings
  "editor.accessibilitySupport": "off",
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.minimap.enabled": false,
  "editor.scrollBeyondLastLine": false,
  "editor.hideCursorInOverviewRuler": true,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "settingsSync.ignoredSettings": [
    // "editor.fontSize",
    "editor.tokenColorCustomizations",
    // "terminal.integrated.fontSize",
    "workbench.colorTheme",
    "window.zoomLevel"
  ],
  "window.zoomLevel": 3,
  "workbench.activityBar.visible": false,
  "workbench.colorTheme": "Ayu One Dark",
  "workbench.colorCustomizations": {},
  "workbench.editor.untitled.hint": "hidden",
  "workbench.editorAssociations": {
    "git-rebase-todo": "default"
  },
  "workbench.startupEditor": "newUntitledFile",
  // Typography
  "editor.fontFamily": "DankMono Nerd Font, Hack Nerd Font Mono, Operator Mono, BlexMono Nerd Font, MesloLGS NF",
  "editor.fontLigatures": true,
  "editor.renderWhitespace": "all",
  "editor.fontSize": 16,
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "html.format.endWithNewline": false,
  // Terminal
  "terminal.external.osxExec": "Hyper.app",
  "terminal.integrated.fontFamily": "BlexMono Nerd Font, MesloLGS NF, Hack Nerd Font Mono",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.tabs.enabled": true,
  // Search + Sidebar
  "search.exclude": {
    "**/bower_components": true,
    "**/*.cache": true,
    "**/*.log": true,
    "**/node_modules": true,
    "**/dist": true,
    "**/esnext": true
  },
  "files.exclude": {},
  // Custom syntax highlighting
  "files.associations": {},
  // Other
  "css.validate": false,
  "scss.validate": false,
  "stylelint.enable": true,
  "javascript.updateImportsOnFileMove.enabled": "never",
  "typescript.updateImportsOnFileMove.enabled": "never",
  // Extensions
  "gitlens.keymap": "alternate",
  "gitlens.showWhatsNewAfterUpgrades": false,
  "gitlens.currentLine.scrollable": false,
  "gitlens.codeLens.enabled": false,
  "workbench.iconTheme": "material-icon-theme"
}
